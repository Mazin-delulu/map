  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mobile UI Fullscreen</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: Arial, sans-serif;
      overflow: hidden;
      background: #f2f2f2;
    }

    /* Nội dung chính full screen */
    .main-content {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: #4a90e2;
      color: white;
      text-align: center;
      padding: 20px;
      box-sizing: border-box;
    }

    .main-content h1 {
      margin-bottom: 20px;
      font-size: 28px;
    }

    .open-popup-btn {
      padding: 15px 30px;
      font-size: 18px;
      border: none;
      border-radius: 10px;
      background-color: #ff6b6b;
      color: white;
      cursor: pointer;
      transition: background 0.3s;
    }

    .open-popup-btn:hover {
      background-color: #ff4c4c;
    }

    /* Popup full screen trượt từ dưới lên */
    .popup {
      position: fixed;
      left: 0;
      right: 0;
      bottom: -100%;
      height: 80%;
      background: white;
      border-top-left-radius: 20px;
      border-top-right-radius: 20px;
      box-shadow: 0 -5px 20px rgba(0,0,0,0.3);
      transition: bottom 0.4s ease;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .popup.active {
      bottom: 0;
    }

    .popup-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 20px;
      font-size: 20px;
      font-weight: bold;
      border-bottom: 1px solid #ddd;
      background: #f8f8f8;
      cursor: grab;
    }

    .close-popup-btn {
      background: none;
      border: none;
      font-size: 28px;
      cursor: pointer;
      line-height: 1;
    }

    .popup-content {
      flex: 1;
      overflow-y: auto;
      padding: 15px 20px;
    }

    /* Scrollbar đẹp hơn trên mobile */
    .popup-content::-webkit-scrollbar {
      width: 6px;
    }
    .popup-content::-webkit-scrollbar-thumb {
      background: rgba(0,0,0,0.2);
      border-radius: 3px;
    }
